{
  "name": "Autocapitalize",
  "version": "1.0",
  "description": "Capitalizes the first letter in a sentence.",
  "icons": { 
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
	  "all_frames": true,
      "js": ["main.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "tabs"
  ]  
}